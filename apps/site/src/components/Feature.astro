---
import { Icon } from "astro-icon/components";

export interface Props {
  title: string;
  help: string;
  included: boolean;
}

const { title, help, included } = Astro.props;
---

<section>
  <div title={help}>
    <h3>{title}</h3>
    <Icon name="solar:info-square-broken" />
  </div>
  {
    included ? (
      <span id="active">
        <Icon name="solar:check-circle-bold" />
      </span>
    ) : (
      <span>
        <Icon name="solar:close-circle-line-duotone" />
      </span>
    )
  }
</section>

<style>
  section {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    font-size: var(--step--2);
    gap: var(--space-2xs);
    padding-block: var(--space-3xs-2xs);

    > div {
      display: flex;
      align-items: center;
      justify-content: center;
      cursor: help;
      gap: 1ch;
    }

    span {
      > [data-icon] {
        font-size: var(--step-0);
      }

      &#active {
        color: var(--blue-500);
      }
    }
  }
</style>
