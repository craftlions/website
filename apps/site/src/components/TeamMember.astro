---
import Image from "astro/components/Image.astro";
import profileImage from "../assets/me.jpeg";
import { Icon } from "astro-icon/components";
---

<article>
  <Image src={profileImage} alt="John Doe" width="300" height="300" />
  <h1>John Doe</h1>
  <h2>CEO & Founder, Example</h2>
  <p>Harvard University</p>
  <a href="#">
    <Icon name="solar:scale-bold-duotone" />
  </a>
  <a href="#">
    <Icon name="solar:scale-bold-duotone" />
  </a>
  <a href="#">
    <Icon name="solar:scale-bold-duotone" />
  </a>
  <a href="#">
    <Icon name="solar:scale-bold-duotone" />
  </a>
  <p><button>Contact</button></p>
</article>

<style>
  .article {
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
    max-width: 300px;
    margin: auto;
    text-align: center;
  }

  h2 {
    color: grey;
    font-size: 18px;
  }

  button {
    border: none;
    outline: 0;
    display: inline-block;
    padding: 8px;
    color: white;
    background-color: #000;
    text-align: center;
    cursor: pointer;
    width: 100%;
    font-size: 18px;
  }

  a {
    text-decoration: none;
    font-size: 22px;
    color: black;
  }

  button:hover,
  a:hover {
    opacity: 0.7;
  }
</style>
