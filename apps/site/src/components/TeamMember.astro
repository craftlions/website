---
import Image from "astro/components/Image.astro";
import profileImage from "../assets/me.jpeg";
import { Icon } from "astro-icon/components";
---

<article>
  <Image src={profileImage} alt="John Doe" width="200%" />
  <h1>Alexander Niebuhr</h1>
  <h2>CEO & Founder, craftlions</h2>

  <div>
    <a href="https://github.com/alexanderniebuhr">
      <Icon name="octicon:mark-github-24" />
    </a>
    <a href="https://twitter.com/realalexniebuhr">
      <Icon name="ph:twitter-logo-fill" />
    </a>
    <a href="https://www.linkedin.com/in/alexanderniebuhr/">
      <Icon name="ph:linkedin-logo-fill" />
    </a>
  </div>
</article>

<style>
  article {
    color: white;
    background-color: var(--neutral-800);
    padding: var(--space-m);
    max-width: 300px;
    margin: auto;
    text-align: center;
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
  }

  h2 {
    color: grey;
    font-size: 18px;
  }

  div {
    display: flex;
    justify-content: center;
    gap: 1ch;
  }

  a {
    text-decoration: none;
    font-size: 22px;
  }

  button:hover,
  a:hover {
    opacity: 0.7;
  }
</style>
