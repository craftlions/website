---
export interface Props {
  question: string;
  answer: string;
}

const { question, answer } = Astro.props;
---

<section>
  <details>
    <summary class="strong">{question}</summary>
    <p class="prose">{answer}</p>
  </details>
</section>

<style>
  section {
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);

    details {
      padding-inline: var(--space-xs);
      padding-block: var(--space-2xs);
      background: #666;
      border-radius: var(--space-2xs);
      border: 1px solid #888;
      transition: 0.2 background linear;
      &:hover {
        background-color: #555;
      }
    }

    summary {
      font-size: var(--step-0);
      cursor: pointer;
    }

    p {
      font-size: var(--step--1);
    }
  }
</style>
