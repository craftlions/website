---
import FAQs from "../components/FAQs.astro";
import Slogan from "../components/Slogan.astro";
import CTA from "../components/CTA.astro";
import Benefits from "../components/Benefits.astro";
import Navigation from "../components/Navigation.astro";
import Comparison from "../components/Comparison.astro";
import Shell from "../layouts/Shell.astro";
---

<Shell title="craftlions">
  <Navigation />

  <Slogan />

  <Benefits />

  <Comparison />

  <CTA />

  <FAQs />
</Shell>

<style>
  #expertise {
    grid-area: expertise;

    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;

    div {
      display: flex;
      flex-direction: row;
      align-items: center;
      font-size: var(--step-2);

      [data-icon] {
        color: var(--blue-500);
      }

      b {
        font-size: var(--step-5);
      }
    }
  }

  body {
    background-color: var(--neutral-950);
    color: #fff;
    font-family: Inter, sans-serif;
    font-style: normal;

    font-size: var(--step-0);
    font-weight: 400;
    line-height: 120%;

    b {
      font-weight: 700;
      line-height: 120%;
    }

    p {
      font-weight: 400;
      line-height: 160%;
    }
  }

  #logo {
    color: #fff;
    font-family: Inter, sans-serif;
    font-size: var(--step-2);
    font-style: normal;
    font-weight: 700;
    line-height: 120%;
    text-decoration: none;
  }

  #bentocards {
    background-size: cover;
    background-position: center center;
    background-repeat: repeat;
    background-color: var(--neutral-950);
    background-image: url("data:image/svg+xml;base64,");

    #about {
      grid-area: about;
      padding: var(--space-s);
      gap: var(--space-xs);
      display: flex;
      flex-direction: column;
      justify-content: space-between;

      > div {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
      }

      img {
        width: calc(var(--space-3xl) + var(--space-m));
        border-radius: var(--space-s);
        height: auto;
        border: 2px solid var(--neutral-900);
      }

      div:nth-child(2) {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        > b {
          margin-top: var(--space-2xs);
          font-size: var(--step-3);
        }

        > span {
          font-size: var(--step--1);
        }
      }

      #tags {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        justify-content: start;
        gap: var(--space-3xs);
      }

      .tag {
        background: var(--neutral-950);
        display: flex;
        flex-direction: row;
        padding-block: var(--space-3xs);
        padding-inline: var(--space-2xs);
        align-items: center;
        gap: var(--space-3xs);
        border-radius: var(--space-3xl);
      }

      #buttons {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: var(--space-3xs);

        > div {
          background-color: var(--neutral-950);
          padding-block: var(--space-3xs);
          padding-inline: var(--space-2xs);
          border-radius: var(--space-2xs);
        }
      }
    }

    > section {
      background: color-mix(in srgb, var(--neutral-950) 40%, transparent);
      backdrop-filter: blur(8px) saturate(140%);
      border: 1px solid var(--neutral-700);
      border-radius: var(--space-2xs);
      color: #fff;
      text-align: center;

      @supports (color: oklch(0% 0 0)) {
        background: color-mix(in oklch, var(--neutral-950) 40%, transparent);
        /* box-shadow: 0 8px 32px 0
          color-mix(in oklch, var(--neutral-950) 20%, transparent); */
      }
    }
    --grid-max-width: 92.5rem;
    --grid-gutter: var(--space-s-l);
    --grid-columns: 12;
    max-width: var(--grid-max-width);
    padding: var(--grid-gutter);
    margin-inline: auto;
    display: grid;
    grid-template-columns: repeat(var(--grid-columns), 1fr);
    grid-template-rows: repeat(3, min-content);
    gap: var(--grid-gutter);

    grid-template-areas:
      "about about about about about about expertise expertise expertise contentone contentone contentone"
      "about about about about about about contenttwo contenttwo contenttwo contenttwo contenttwo contenttwo"
      "bottomleft bottomleft bottomleft bottomleft bottomcenter bottomcenter bottomcenter bottomcenter bottomright bottomright bottomright bottomright";
  }
  #faqs {
    font-family: "Inter", sans-serif;
    padding: var(--space-l);
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
    color: #fff;

    > section {
      --grid-max-width: 92.5rem;
      --grid-gutter: var(--space-s-l);
      --grid-columns: 12;

      display: grid;

      max-width: var(--grid-max-width);
      padding: var(--grid-gutter);
      gap: var(--grid-gutter);

      margin-inline: auto;

      grid-template-columns: 1fr 1fr;
      grid-template-rows: 1fr;
    }
  }
</style>
