---
import TeamMember from "../components/TeamMember.astro";
import Navigation from "../components/Navigation.astro";
import Shell from "../layouts/Shell.astro";
---

<Shell title="craftlions | About">
  <Navigation />

  <h2>Our Team</h2>
  <h3>craftlions is completly creative, innovative, effeciteve Agency.</h3>

  <section>
    <TeamMember />
  </section>
</Shell>

<style>
  body {
    background-color: var(--neutral-950);
    color: #fff;
    font-family: Inter, sans-serif;
    font-style: normal;

    font-size: var(--step-0);
    font-weight: 400;
    line-height: 120%;

    b {
      font-weight: 700;
      line-height: 120%;
    }

    p {
      font-weight: 400;
      line-height: 160%;
    }
  }

  #logo {
    color: #fff;
    font-family: Inter, sans-serif;
    font-size: var(--step-2);
    font-style: normal;
    font-weight: 700;
    line-height: 120%;
    text-decoration: none;
  }

  section {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: var(--space-xl);
  }

  h2 {
    font-size: var(--step-3);
    font-weight: 700;
    line-height: 120%;
  }

  h3 {
    font-size: var(--step-1);
    font-weight: 700;
    line-height: 120%;
  }
</style>
